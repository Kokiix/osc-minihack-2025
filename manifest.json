{
  "name": "All in One Canvas",
  "version": "1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "103.0",
  
  "permissions": ["activeTab"],
  
  "host_permissions": [
    "https://ufl.instructure.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://ufl.instructure.com/*", "https://ufl.instructure.com/?*"],
      "js": ["axios.js", "main.js"],
      "run_at": "document_end"
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "default-src 'self' 'wasm-unsafe-eval';"
  }
}